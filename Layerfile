FROM vm/ubuntu:18.04

# Install Docker
RUN apt-get update && \
    apt-get install -y ca-certificates curl gnupg lsb-release && \
    sudo mkdir -p /etc/apt/keyrings && \
    curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /etc/apt/keyrings/docker.gpg && \
    echo "deb [arch=$(dpkg --print-architecture) signed-by=/etc/apt/keyrings/docker.gpg] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable" | \
    sudo tee /etc/apt/sources.list.d/docker.list > /dev/null && \
    apt-get update && \
    apt-get install -y docker-ce docker-ce-cli containerd.io

# Install basic tools
RUN apt-get install -y nodejs npm

# Copy repository files
COPY . .

# Tahap CI: Linting dan Validasi
RUN npm install -g htmlhint
RUN npm install -g stylelint
RUN npm install -g eslint

# Jalankan linting
RUN htmlhint *.html || true
RUN stylelint "*.css" || true
RUN eslint "*.js" || true

# Tahap Build: Build Docker image
RUN docker build -t web-app .

# Tahap Test: Test container
RUN docker run -d -p 80:80 web-app
RUN while ! curl -s localhost:80 > /dev/null; do sleep 1; done

# Expose website untuk preview
EXPOSE WEBSITE http://localhost:80

# Tambahkan badge status
BUTTON Deploy To Production
RUN echo "Deployment successful!" 